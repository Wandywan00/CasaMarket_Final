@model IEnumerable<CasaMarket.Domain.Entities.DetailOrder>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Category)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DetailOrderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DetailOrderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DetailOrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
